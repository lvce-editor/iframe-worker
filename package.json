{
  "name": "@lvce-editor/iframe-worker",
  "version": "0.0.0-dev",
  "description": "Web Worker to manage creation and lifecycle of iframes in Lvce Editor",
  "main": "src/iframeWorkerMain.ts",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:lvce-editor/iframe-worker.git"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc",
    "build": "node scripts/build.js",
    "build:watch": "nodemon",
    "format": "prettier --write ."
  },
  "keywords": [
    "iframe"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 59,
        "functions": 67,
        "lines": 67
      }
    }
  },
  "xo": {
    "rules": {
      "unicorn/filename-case": "off",
      "unicorn/prefer-query-selector": "off",
      "indent": "off",
      "semi": "off",
      "no-unused-vars": "off",
      "unicorn/numeric-separators-style": "off",
      "no-extra-semi": "off",
      "arrow-body-style": "off",
      "padded-blocks": "off",
      "capitalized-comments": "off",
      "padding-line-between-statements": "off",
      "arrow-parens": "off",
      "no-warning-comments": "off",
      "array-bracket-spacing": "off",
      "comma-spacing": "off",
      "unicorn/no-array-callback-reference": "off",
      "comma-dangle": "off",
      "operator-linebreak": "off",
      "no-case-declarations": "off",
      "no-undef": "off",
      "object-curly-spacing": "off",
      "object-shorthand": "off",
      "complexity": "off",
      "no-labels": "off",
      "no-multi-assign": "off",
      "max-params": "off",
      "no-bitwise": "off",
      "unicorn/prefer-math-trunc": "off",
      "no-await-in-loop": "off",
      "unicorn/prefer-add-event-listener": "off",
      "no-unused-expressions": "off",
      "node/prefer-global/process": "off",
      "unicorn/no-for-loop": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/switch-case-braces": "off",
      "quotes": "off",
      "@typescript-eslint/semi": "off",
      "object-curly-newline": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/indent": "off",
      "n/file-extension-in-import": "off",
      "@typescript-eslint/promise-function-async": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/quotes": "off",
      "@typescript-eslint/object-curly-spacing": "off",
      "@typescript-eslint/padding-line-between-statements": "off",
      "@typescript-eslint/prefer-ts-expect-error": "off",
      "@typescript-eslint/consistent-type-definitions": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-confusing-void-expression": "off"
    },
    "ignores": [
      "distmin"
    ]
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "9.14.0",
    "@lvce-editor/rpc": "^1.13.0",
    "@lvce-editor/verror": "^1.6.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.9.0",
    "eslint": "9.14.0",
    "execa": "^9.5.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "rollup": "^4.27.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "eslint-plugin-perfectionist": "^4.4.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 150
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js",
    "exec": "node scripts/build.js"
  }
}
